@{
    ViewBag.Title = "ManagerList";
}
@model IList<Business.Core.Manager>

<div class="widget-header widget-toolbar-light  widget-box transparent" style="padding-left: 0px;">
    <div class="widget-toolbar float-none  no-border">
         <span class="btn btn-app btn-light btn-xs height-20">
            <input type="checkbox"/>全选
        </span>
    </div>
</div>

<div class="table-responsive">
    <table id="sample-table-1" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th class="center">
                    <label>
                        <span class="lbl">序号</span>
                    </label>
                </th>
                <th>Domain</th>
                <th>Price</th>
                <th class="hidden-480">Clicks</th>

                <th>
                    <i class="icon-time bigger-110 hidden-480"></i>
                    Update
                </th>
                <th class="hidden-480">Status</th>

                <th></th>
            </tr>
        </thead>

        <tbody>
         @foreach (var item in Model)
         {
             <tr id="data-item(@item.Id)">
                 <td class="center">
                     <label>
                         <input type="checkbox" class="ace" />
                         <span class="lbl"></span>
                     </label>
                 </td>

                 <td>
                     <a href="#">@item.UserName</a>
                 </td>
                 <td>@item.Password</td>
                 <td class="hidden-480">4,400</td>
                 <td>@item.CreateTime</td>

                 <td class="hidden-480">
                     <span class="label label-sm label-warning">Expiring</span>
                 </td>

                 <td class="width-20">
                     <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                         <button class="btn btn-xs btn-success ">
                             <i class="icon-ok bigger-120"></i>查看
                         </button>

                         <button class="btn btn-xs btn-info">
                             <i class="icon-edit bigger-120"></i>编辑
                         </button>

                         <button class="btn btn-xs btn-danger" onclick="deleteManager('@item.Id')">
                             <i class="icon-trash bigger-120"></i>删除
                         </button>

                         <button class="btn btn-xs btn-warning">
                             <i class="icon-flag bigger-120"></i>禁用
                         </button>
                     </div>

                     <div class="visible-xs visible-sm hidden-md hidden-lg">
                         <div class="inline position-relative">
                             <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown">
                                 <i class="icon-cog icon-only bigger-110"></i>
                             </button>

                             <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                                 <li>
                                     <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                                         <span class="blue">
                                             <i class="icon-zoom-in bigger-120"></i>
                                         </span>
                                     </a>
                                 </li>

                                 <li>
                                     <a href="#" class="tooltip-success" data-rel="tooltip" title="Edit">
                                         <span class="green">
                                             <i class="icon-edit bigger-120"></i>
                                         </span>
                                     </a>
                                 </li>

                                 <li>
                                     <a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
                                         <span class="red">
                                             <i class="icon-trash bigger-120"></i>
                                         </span>
                                     </a>
                                 </li>
                             </ul>
                         </div>
                     </div>
                 </td>
             </tr>
         }
        </tbody>
    </table>
</div><!-- /.table-responsive -->



<div class="widget-header widget-toolbar-light  widget-box transparent" style="padding-left: 0px;">
    <div class="widget-toolbar float-none  no-border">
        <span class="btn btn-app btn-light btn-xs height-20">
            <input type="checkbox"/>全选
        </span>
    </div>
</div>

<script type="text/javascript">
 
    function deleteManager(id) {
        deleteItem(id);
    }
    function deleteItem(id) {
         art.dialog({
            icon: "question",
            content: "确定删除" + id + "数据？",
            ok: function () {
                $("#data-item" + id).remove();
                this.close();
                return false;
            },
            cancelVal: '关闭',
            cancel: true,
            lock: true
        });
    }
</script>